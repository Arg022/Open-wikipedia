<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Wikipedia Search</title>
    <link href="/style/output.css" rel="stylesheet">
</head>
<body>
    <div class="container mx-auto p-4">
        <h1 class="text-2xl font-bold">Wikipedia Search</h1>
        <form action="/search" method="POST" class="mt-4">
            <input type="text" name="query" class="border p-2 w-full" placeholder="Search Wikipedia">
            <button type="submit" class="bg-blue-500 text-white px-4 py-2 mt-2">Search</button>
        </form>
        <ul id="search-results" class="mt-4"></ul>
        <% if (typeof results !== 'undefined') { %>
        <ul id="search-results" class="mt-4">
            <% results.forEach(result => { %>
            <li>
                <%= result.title %>
                <form action="/save-article" method="POST" class="inline">
                    <input type="hidden" name="title" value="<%= result.title %>">
                    <button type="submit" class="bg-green-500 text-white px-2 py-1">Save</button>
                </form>
            </li>
            <% }); %>
        </ul>
        <% } %>
    </div>
    <script src="/scripts/main.js"></script>
</body>
</html>